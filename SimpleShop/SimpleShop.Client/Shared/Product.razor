@rendermode InteractiveAuto

<div class="col d-flex justify-content-center mb-5">
	<div class="card border-0" style="width: 18rem;">
		@* zdjęcia są przechowywane w WebApi dlatego do ścieżki trzeba dokleić adres api *@
		<img src="@(_baseUrl + ProductModel.ImageUrl)" class="card-img-top" alt="@ProductModel.Name">
		<div class="card-body d-flex justify-content-between align-items-center">
			<div>
				<h5 class="card-title">@ProductModel.Name</h5>
				<div class="mb-1">
					<i class="fa-solid fa-star text-warning"></i>
					<i class="fa-solid fa-star text-warning"></i>
					<i class="fa-solid fa-star text-warning"></i>
					<i class="fa-solid fa-star text-warning"></i>
					<i class="fa-solid fa-star text-warning"></i>
				</div>
				<p class="card-text text-primary fw-bold">@ProductModel.Price PLN</p>
			</div>
			<i class="fa-solid fa-cart-plus cart-add me-3" @onclick="OnAddProductToCart"></i>
		</div>
	</div>
</div>