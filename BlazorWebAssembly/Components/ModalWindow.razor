@if (Show)
{
	<div class="my-modal">
		<div class="card bg-light text-dark mb-3" style="width: 30rem; height: 15rem;">
			<div class="card-header d-flex justify-content-between align-items-center text-light bg-dark">
				<div>@Title</div>
				<button @onclick="OnCancel" class="btn btn-danger">X</button>
			</div>
			<div class="card-body d-flex justify-content-center align-items-center">
				<p class="card-text">@Content</p>
			</div>
			<div class="d-flex justify-content-evenly my-3">
				<button @onclick="OnConfirm" class="btn btn-success">Tak</button>
				<button @onclick="OnCancel" class="btn btn-danger">Nie</button>
			</div>
		</div>
	</div>
}